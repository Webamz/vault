@page
@model TheVault.Pages.Orders.IndexModel
@{
}

<br />
<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            @if (User.IsInRole("admin"))
            {
                <th>Customer Name</th>
            }
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListofOrders)
        {
            <tr>
                <td>@item.Id</td>
                @if (User.IsInRole("admin"))
                {
                    <td>@item.CustomerName</td>
                }
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice</td>
                <td>@item.OrderDate</td>
            </tr>
        }
    </tbody>
</table>
