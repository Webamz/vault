@page
@model IndexModel
@{
    ViewData["Title"] = "TheCollection - Your Ultimate Shopping Destination";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-waZLe3Nim9J+R4qXCjG6iaK5teb25XtWh0f5iCvvlKnUIjsaG0XsZt8TVZUq96ltl1R3J5MawB/ln8XKfPVxxA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #495057;
            line-height: 1.6;
        }

        header {
            background-color: #343a40;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            color: #ffffff;
        }

        header h1 {
            font-size: 2.5em;
            margin: 0;
        }

        .main-content {
            text-align: center;
            padding: 50px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            background-color: #ffffff;
            margin: 20px;
        }

        .main-content h1 {
            font-size: 3em;
            color: #007bff;
            margin-bottom: 20px;
        }

        .main-content p {
            font-size: 1.6em;
            margin-bottom: 30px;
            color: #6c757d;
        }

        .account-section {
            background-color: #007bff;
            padding: 50px 0;
            text-align: center;
            color: #ffffff;
        }

        .account-section h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
        }

        .account-section p {
            font-size: 1.6em;
            margin-bottom: 20px;
        }

        .account-buttons {
            display: flex;
            justify-content: center;
        }

        .account-buttons .btn {
            margin: 0 20px;
            padding: 15px 30px;
            font-size: 1.6em;
            text-decoration: none;
            color: #ffffff;
            border-radius: 10px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .account-buttons .btn-primary {
            background-color: #ffffff;
            color: #007bff;
            border: 2px solid #007bff;
        }

        .account-buttons .btn-secondary {
            background-color: #6c757d;
            border: 2px solid #6c757d;
        }

        .account-buttons .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>

    <header>
        <h1>@ViewData["Title"]</h1>
    </header>

    <div class="main-content">
        <h1>Welcome to TheCollection</h1>
        <p>Your ultimate shopping experience awaits! Sign up or log in to access personalized shopping and exclusive offers.</p>
    </div>

    <div class="account-section">
        <div class="container">
            <h2>Create an Account</h2>
            <p>Sign up or log in to access personalized shopping and exclusive offers.</p>
            <div class="account-buttons">
                <a href="/Users/Create" class="btn btn-primary">Sign Up</a>
                <a href="/Accounts/Login" class="btn btn-secondary">Log In</a>
            </div>
        </div>
    </div>

</body>

</html>
